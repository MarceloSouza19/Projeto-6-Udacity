<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:layout_goneMarginBottom="10dp">

    <LinearLayout
        android:id="@+id/linearSelecao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tituloNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="oi galera hehehe, tudo bem com vcs?"
            android:textAlignment="center"
            android:textAllCaps="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sessaoNoticia"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="SessÃ£o"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/irParaNoticia"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:text="Ver no Navegador"
                android:gravity="center"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/dataNoticia"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Data"
                android:gravity="end"
                android:paddingRight="10dp"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>